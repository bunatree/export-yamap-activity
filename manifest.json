{
  "manifest_version": 3,
  "name": "YAMAP Activity Exporter",
  "version": "1.0.0",
  "description": "Exports YAMAP activity data including title, description, and photos.",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://cdn.yamap.co.jp/*",
    "https://yamap.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
      "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://yamap.com/activities/*"],
      "js": ["content.js"]
    }
  ]
}
